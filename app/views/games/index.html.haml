- model_class = Game
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
= render 'index_table', games: @my_games, model_class: model_class, my_games: true, title: 'My games'

= link_to t('.new', :default => t("helpers.links.new")), new_game_path, :class => 'btn btn-primary'

= render 'index_table', games: @games, model_class: model_class, my_games: false, title: 'Games to which I was invited'
