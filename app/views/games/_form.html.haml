= form_for @game, html: { class: "form form-horizontal game" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :content, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_area :content, class: 'form-control'
    = f.error_span(:content)
  
  .form-group
    = f.label 'Add user', class: 'control-label col-lg-2'
    .col-lg-10
      = render 'select_user_id'    

  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), games_path, :class => 'btn btn-default'
