%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:content)
      %th= model_class.human_attribute_name(:status)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - games.each do |game|
      %tr
        %td= link_to game.id, game_path(game)
        %td= game.name
        %td= game.content
        %td= game.status
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_game_path(game), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), game_path(game), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'
