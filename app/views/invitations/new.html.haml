%h1 Invitations#new

= form_tag({controller: 'invitations', action: 'create'}, class: 'form form-horizontal game') do
  .form-group  
    = hidden_field_tag(:game_id, @game_id)
    %p
      = label_tag :name
      = text_field_tag :name
    %p
      = label_tag :surname
      = text_field_tag :surname

    %p
      = label_tag :email
      = email_field_tag :email

    = submit_tag('Invite...') 
  